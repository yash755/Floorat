<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_upload_classifieds"
    tools:context="com.floorat.UploadClassifieds">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed1"
        android:hint="Enter Title"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/ed2"
        android:layout_alignStart="@+id/ed2"
        android:paddingTop="30dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed2"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/ed1"
        android:layout_alignLeft="@+id/ed3"
        android:layout_alignStart="@+id/ed3"
        android:hint="Enter Description"
        android:paddingTop="-10dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed3"
        android:layout_below="@+id/ed2"
        android:layout_alignLeft="@+id/ed4"
        android:layout_alignStart="@+id/ed4"
        android:layout_marginTop="25dp"
        android:inputType="number"
        android:hint="Enter Price" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed4"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/ed3"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:hint="Enter Contact" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:id="@+id/upload_classified"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/ed4"
        android:layout_centerHorizontal="true"
        style="?android:attr/buttonStyleSmall"
        android:onClick="onClick" />



    <Spinner
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/spin1"
        android:entries="@array/condition"
        android:layout_below="@+id/upload_classified"
        android:paddingTop="35dp"
        android:layout_centerHorizontal="true">
    </Spinner>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:id="@+id/login"
        android:paddingBottom="20dp"
        android:layout_below="@+id/spin1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        style="?android:attr/buttonStyleSmall"
        android:onClick="onClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Condition"
        android:id="@+id/textView2"
        android:layout_below="@+id/upload_classified"
        android:layout_alignLeft="@+id/upload_classified"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@+id/upload_classified" />
</RelativeLayout>

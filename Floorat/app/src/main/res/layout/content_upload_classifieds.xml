<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_upload_classifieds"
    tools:context="com.floorat.Activity.UploadClassifieds">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:hint="Enter Title"
        android:singleLine="true"
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_marginTop="10dp"
        android:hint="Enter Description"
        android:singleLine="true"
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:hint="Enter Price"
        android:singleLine="true"
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/contact"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:hint="Enter Contact"
        android:singleLine="true"
        android:imeOptions="actionDone"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/i1"
            android:src="@mipmap/ic_launcher"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Select"
                android:id="@+id/buttonChoose1"
                android:layout_marginTop="110dp"
                style="?android:attr/buttonStyleSmall"
               />

        <ImageView
            android:layout_marginLeft="120dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/i2"
            android:src="@mipmap/ic_launcher"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Select"
                android:layout_marginLeft="120dp"
                android:id="@+id/buttonChoose2"
                android:layout_marginTop="110dp"
                style="?android:attr/buttonStyleSmall"
               />

            <ImageView
                android:layout_marginLeft="240dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/i3"
                android:src="@mipmap/ic_launcher"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Select"
                android:layout_marginLeft="240dp"
                android:id="@+id/buttonChoose3"
                android:layout_marginTop="110dp"
                style="?android:attr/buttonStyleSmall"
               />

        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Condition"
            android:id="@+id/textView2"
            android:layout_marginTop="10dp"/>
        <Spinner
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/spin1"
        android:entries="@array/condition"
        android:layout_centerHorizontal="true">
    </Spinner>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:id="@+id/upload_buy"
            android:layout_centerHorizontal="true"
            style="?android:attr/buttonStyleSmall"
           />

</LinearLayout>
